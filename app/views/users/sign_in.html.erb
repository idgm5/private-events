<h1>Sign In</h1>
  <ul>

  <% unless @user.nil? %>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>
  
  </ul>

<%= form_with url: login_path  do |f| %>

        <%= f.text_field :name %>
        <%= f.submit 'Go' %>

<% end %>

<p><%= link_to 'Back to home', root_path  %></p>